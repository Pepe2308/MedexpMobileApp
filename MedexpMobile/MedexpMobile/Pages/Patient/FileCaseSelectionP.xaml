<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedexpMobile.Pages.Patient.FileCaseSelectionP"
             Title="Expediente médico"
             BackgroundColor="#4A4A4A">
  <ContentPage.Content>
    <StackLayout Spacing="10" HorizontalOptions="FillAndExpand">
      <Label Text="Elegir una sección"
             FontSize="25"
             TextColor="Gray"
             HorizontalTextAlignment="Start"/>
      
      <Button Text="Datos generales"
              VerticalOptions="Center"  
              HorizontalOptions="FillAndExpand"
              FontSize="14"
              BackgroundColor="#4A4A4A"
              TextColor="Gray"
              Clicked="PatientInfoClicked"/>
      
      <Button Text="Citas"
              VerticalOptions="Center"
              HorizontalOptions="FillAndExpand"
              FontSize="14"
              BackgroundColor="#4A4A4A"
              TextColor="Gray"
              Clicked="PatientAppointmentClicked"/>
      
    </StackLayout>
  </ContentPage.Content>

</ContentPage>